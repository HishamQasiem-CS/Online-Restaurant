@model EditUserViewModel
@{
    Layout = null;
}
<style>
    label{
        font-size:20px;
        font-weight:bold;
        margin-left:5px;
    }
   
    
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<h2 style="text-align:center; font-size:40px;margin-top:10px; font-family:Calibri;">My Account</h2>

<h3 style="text-align:center; color:red">@Html.DisplayFor(x=>x.Name)</h3>


@if (ViewData["Message"] != null)
{
    <div class="alert alert-info">
        @ViewData["Message"]
    </div>
}

<form asp-action="EditProfile" asp-controller="Account" method="post" style=" background:pink;">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-group" >
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Country"></label>
        @Html.DropDownList("Country",Html.GetEnumSelectList<Country>(),"Choose the Country Availably" , new{
        @class="form-control"
        })

        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        @Html.DropDownList("City",Html.GetEnumSelectList<City>(),"Choose the City Availably", new{
        @class="form-control"
        })        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Geunder"></label>
        @Html.DropDownList("Geunder",Html.GetEnumSelectList<Geunder>(),"Choose the Geunder", new{
        @class="form-control"
        })        <span asp-validation-for="Geunder" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate"></label>
        <input asp-for="BirthDate"  type="datetime" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <!-- يمكنك إضافة المزيد من الحقول حسب الحاجة -->

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
