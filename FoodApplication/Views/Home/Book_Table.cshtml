<!-- ======= Book A Table Section ======= -->
<section id="book-a-table" class="book-a-table" >
    <div class="container" style="margin-top:60px;">

        <div class="section-title">
            <h2>Book a <span>Table</span></h2>
            <p>Ut possimus qui ut temporibus culpa velit eveniet modi omnis est adipisci expedita at voluptas atque vitae autem.</p>
        </div>

        <form asp-action="Book_Table" asp-controller="Home" method="post">
            <div class="row">
                <div class="col-lg-4 col-md-6 form-group">
                    <input asp-for="Name"  class="form-control"  placeholder="Your Name" >
                    <div class="validate"></div>
                </div>
                <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0">
                    <input  asp-for="Email" class="form-control"  placeholder="Your Email"  data-msg="Please enter a valid email">
                    <div class="validate"></div>
                </div>
                <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0">
                    <input asp-for="PhoneNumber" class="form-control"  placeholder="Your Phone"  data-msg="Please enter at least 4 chars">
                    <div class="validate"></div>
                </div>
                <div class="col-lg-4 col-md-6 form-group mt-3">
                    <input asp-for="Date" class="form-control"  type="date" placeholder="Date" data-msg="Please enter at least 4 chars">
                    <div class="validate"></div>
                </div>
                <div class="col-lg-4 col-md-6 form-group mt-3">
                    <input asp-for="Time" class="form-control" type="time"  placeholder="Time"  data-msg="Please enter at least 4 chars">
                    <div class="validate"></div>
                </div>
                <div class="col-lg-4 col-md-6 form-group mt-3">
                    <input asp-for="OfPepole"  class="form-control"  placeholder="# of people"  data-msg="Please enter at least 1 chars">
                    <div class="validate"></div>
                </div>
            </div>
            <div class="form-group mt-3">
                <textarea class="form-control" asp-for="Message" rows="5" placeholder="Message"></textarea>
                <div class="validate"></div>
            </div>
            <div class="mb-3">
                <div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message">Your booking request was sent. We will call back or send an Email to confirm your reservation. Thank you!</div>
            </div>
            <div class="text-center"><button class="btn btn-primary" type="submit">Send Message</button></div>
        </form>

    </div>
</section><!-- End Book A Table Section -->