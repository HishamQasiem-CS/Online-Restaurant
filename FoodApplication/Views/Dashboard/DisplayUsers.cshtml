@model IEnumerable<User>

@{
    Layout = null;
}
<style>
    table {
        text-align: center;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">


<h1>Display Users</h1>

<table class="table table-bordered">
    <tr>
        <th>@Html.DisplayNameFor(x=>x.UserName)</th>
        <th>@Html.DisplayNameFor(x=>x.Email)</th>
        <th>@Html.DisplayNameFor(x=>x.Country)</th>
        <th>@Html.DisplayNameFor(x=>x.City)</th>
        <th>@Html.DisplayNameFor(x=>x.Geunder)</th>
        <th>@Html.DisplayNameFor(x=>x.Age)</th>
        <th>@Html.DisplayNameFor(x=>x.Address)</th>
        <th>@Html.DisplayNameFor(x=>x.BirthDate)</th>
        <th>@Html.DisplayNameFor(x=>x.RegestraionDate)</th>


        <th>Operations</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td>@item.Country</td>
            <td>@item.City</td>
            <td>@item.Geunder</td>
            <td>@item.Age</td>

            <td>@item.Address</td>
            <td>@item.BirthDate</td>

            <td>@item.RegestraionDate</td>
            <td>
                <a asp-action="UpdateUser" asp-controller="Dashboard" asp-route-email="@item.Email" class="btn btn-primary">Update</a>

                <a asp-action="DeleteUser" asp-controller="Dashboard" asp-route-email="@item.Email" class="btn btn-danger" onclick="return confirm('Are yoy sure you want to delete this user?')">Delete</a>
            </td>
        </tr>

    }
    <tr>
        <td>
            <a asp-action="Index" asp-controller="Dashboard" class="btn btn-success">Back to Dashboard</a>

        </td>
    </tr>

</table>
