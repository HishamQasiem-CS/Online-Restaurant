@model RegisterViewModel
@{
    Layout = null;
}

<style>

</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

<form asp-action="UpdateUser" asp-controller="Dashboard" method="post">
    <table class="table table-bordered">
        <tr>
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </tr>
        <tr>
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </tr>
        <tr>
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </tr>
        <tr>
            <label asp-for="ConfirmPassword"></label>
            <input class="form-control" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
        </tr>
        <tr>
            <label asp-for="Country"></label>
            <span>@Html.DropDownList("Country",Html.GetEnumSelectList<Country>(),"Choose the Country Availably")</span>
            <span asp-validation-for="Country"></span>
        </tr>
        <tr>
            <label asp-for="City"></label>
            <span>@Html.DropDownList("City",Html.GetEnumSelectList<City>(),"Choose the City Availably")</span>
            <span asp-validation-for="City"></span>
        </tr>
        <tr>
            <label asp-for="Geunder"></label>
            <span>@Html.DropDownList("Geunder",Html.GetEnumSelectList<Geunder>(),"Choose the Geunder")</span>
            <span asp-validation-for="Geunder"></span>
        </tr>
        <tr>
            <label asp-for="Address"></label>
            <input class="form-control" asp-for="Address" />
            <span asp-validation-for="Address"></span>
        </tr>
        <tr>
            <label asp-for="Age"></label>
            <input class="form-control" asp-for="Age" />
            <span asp-validation-for="Age"></span>
        </tr>
        <tr>
            <label asp-for="BirthDate"></label>
            <input class="form-control" asp-for="BirthDate" />
            <span asp-validation-for="BirthDate"></span>
        </tr>



        <tr>
            <td>
                <input type="submit" value="Register" class="btn btn-primary" />
            </td>
        </tr>

        <tr>
            <td>
                <a asp-action="Index" asp-controller="Home" class="btn btn-success">Back to Page main</a>

            </td>
        </tr>
    </table>

</form>
