@model Product
@{
    Layout = null;
}

<style>

</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

<form asp-action="UpdateProduect" asp-controller="Dashboard" method="post">
    <table class="table table-bordered">
        <tr>
            <label asp-for="ProductName"></label>
            <input class="form-control" asp-for="ProductName" />
        </tr>
        <tr>
            <label asp-for="Price"></label>
            <input class="form-control" asp-for="Price" />
        </tr>
        <tr>
            <label asp-for="Description"></label>
            <input class="form-control" asp-for="Description" />
        </tr>
        <tr>
            <label asp-for="Qty"></label>
            <input class="form-control" asp-for="Qty" />
        </tr>
        <tr>
            <label asp-for="Image"></label>
            <input class="form-control" asp-for="Image" />
        </tr>
        <tr>
            <label asp-for="CategoreyId"></label>
            <select asp-for="Categorey.CategoreyName" asp-items="@ViewBag.e"></select>
        </tr>
        <br/>
        <tr>
            <label asp-for="isStock"></label>
            <input class="form-check" asp-for="isStock" />
        </tr>

        <tr>
            <td>
                <input type="submit" value="Update the Information" class="btn btn-primary" />
            </td>
        </tr>

        <tr>
            <td>
                <a asp-action="Index" asp-controller="Dashboard" class="btn btn-success">Back to Dashboard</a>

            </td>
        </tr>
    </table>

</form>
