@model IEnumerable<Product>
@{
    Layout=null; 
}
    <h1>Cart</h1>

    @foreach (var item in Model)
{
    <div>
        <h4>@item.ProductName</h4>
        <h4>@item.Price</h4>
        <a asp-action="RemoveFromCart" asp-controller="ShoppingCart" asp-route-productId="@item.ProductId">Delete Product</a>
    </div>
}
<a asp-action="Checkout" asp-controller="ShoppingCart" class="btn btn-primary">Done</a>